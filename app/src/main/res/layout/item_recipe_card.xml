<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/offwhite_rounded"
    android:elevation="4dp"
    android:clipToOutline="true"
    android:layout_gravity="center">

    <!-- Image -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/pale_background"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/imgRecipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add_photo"
            android:contentDescription="Recipe image"
            android:background="@drawable/pale_background"
            android:clipToOutline="true" />

    </FrameLayout>

    <!-- Bottom section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/pale_background"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:gravity="center_vertical">

        <!-- Recipe name -->
        <TextView
            android:id="@+id/tvRecipeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Recipe Name"
            android:textColor="@color/burgundy"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- BUTTONS / BADGE -->
        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- SALES REPORT BADGE -->
            <FrameLayout
                android:id="@+id/salesReportBadge"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgRatingSaleBadge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ratingsale_icon"
                    app:tint="@color/burgundy" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvAverageRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="4.7"
                        android:textColor="@color/burgundy"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSalesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/burgundy"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- MODIFY -->
            <FrameLayout
                android:id="@+id/containerModify"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/btnModify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/modify_icon"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:background="@drawable/circle_button"
                    app:tint="@color/burgundy"
                    android:contentDescription="Modify recipe" />
            </FrameLayout>

            <!-- ADD INGREDIENT -->
            <FrameLayout
                android:id="@+id/containerAddIngredient"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/btnAddIngredient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_ingredient_icon"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:background="@drawable/circle_button"
                    app:tint="@color/burgundy"
                    android:contentDescription="Add ingredient" />
            </FrameLayout>

            <!-- NUTRITION + REVIEWS -->
            <FrameLayout
                android:id="@+id/containerNutrition"
                android:layout_width="52dp"
                android:layout_height="52dp">

                <ImageView
                    android:id="@+id/btnNutrition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nutrition_icon"
                    android:scaleType="centerInside"
                    android:padding="9dp"
                    android:background="@drawable/circle_button"
                    app:tint="@color/burgundy" />

                <ImageView
                    android:id="@+id/btnReviews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rate_review"
                    android:scaleType="centerInside"
                    android:padding="9dp"
                    android:background="@drawable/circle_button"
                    app:tint="@color/burgundy"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
