<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ManageUsersActivity">

    <!-- Top burgundy bar -->
    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/top_profile_backgnd"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/burgundy" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvManageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Users"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Admin card -->
            <LinearLayout
                android:id="@+id/cardAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/pale_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/admin_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAdminRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/admin"
                        android:textColor="@color/burgundy"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAdminEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/adminEmail"
                        android:textColor="@color/pale_grey"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/circle_button"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/imgResetAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_rotate"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/burgundy" />

                    <Button
                        android:id="@+id/btnResetAdmin"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="@id/imgResetAdmin"
                        app:layout_constraintBottom_toBottomOf="@id/imgResetAdmin"
                        app:layout_constraintStart_toStartOf="@id/imgResetAdmin"
                        app:layout_constraintEnd_toEndOf="@id/imgResetAdmin" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- Chef card -->
            <LinearLayout
                android:id="@+id/cardChef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/pale_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:elevation="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/chef_icon3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvChefRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chef_name"
                        android:textColor="@color/burgundy"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvChefEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/chef_email"
                        android:textColor="@color/pale_grey"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/circle_button"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/imgResetChef"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_rotate"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/burgundy" />

                    <Button
                        android:id="@+id/btnResetChef"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="@id/imgResetChef"
                        app:layout_constraintBottom_toBottomOf="@id/imgResetChef"
                        app:layout_constraintStart_toStartOf="@id/imgResetChef"
                        app:layout_constraintEnd_toEndOf="@id/imgResetChef" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- Waiters title -->
            <TextView
                android:id="@+id/tvWaitersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiters"
                android:textColor="@color/burgundy"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp" />

            <!-- No waiter message (inside scroll view, under title) -->
            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No waiter yet"
                android:textColor="@color/soft_burgundy"
                android:textSize="15sp"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <!-- Waiter list -->
            <LinearLayout
                android:id="@+id/listContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
