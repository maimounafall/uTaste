<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:padding="22dp"
        android:clipToOutline="true"
        android:elevation="10dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvNutritionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nutrition"
            android:textAlignment="center"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="16dp" />

        <!-- Ingredient name -->
        <TextView
            android:id="@+id/tvNumberOfSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe name"
            android:textColor="@color/burgundy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="18dp" />

        <!-- Card container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_input"
            android:padding="16dp"
            android:elevation="3dp">

            <!-- ENERGY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Energy (kcal)"
                    android:textColor="@color/burgundy"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5D4D8"
                android:layout_marginBottom="8dp" />

            <!-- CARBS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Carbs(g)"
                    android:textColor="@color/burgundy"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCarbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5D4D8"
                android:layout_marginBottom="8dp" />

            <!-- PROTEINS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Proteins (g)"
                    android:textColor="@color/burgundy"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProteins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5D4D8"
                android:layout_marginBottom="8dp" />

            <!-- FAT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fat (g)"
                    android:textColor="@color/burgundy"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5D4D8"
                android:layout_marginBottom="8dp" />

            <!-- SALT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salt (g)"
                    android:textColor="@color/burgundy"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSalt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5D4D8"
                android:layout_marginBottom="8dp" />

            <!-- FIBERS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fibers (g)"
                    android:textColor="@color/burgundy"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFibers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <!-- Close button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:paddingVertical="10dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</ScrollView>
