<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="22dp"
    android:clipToOutline="true"
    android:elevation="8dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvAddIngredientTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Ingredient"
        android:textAlignment="center"
        android:textColor="@color/burgundy"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginBottom="18dp" />

    <!-- Barcode row (only for stock mode) -->
    <TextView
        android:id="@+id/tvBarcodeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barcode:"
        android:textColor="@color/burgundy"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvBarcodeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="---"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <!-- Ingredient name -->
    <EditText
        android:id="@+id/etIngredientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingredient name"
        android:background="@drawable/rounded_input"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <!-- Quantity -->
    <EditText
        android:id="@+id/etIngredientQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity (%) / Amount"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_input"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp" />

    <!-- Unit (g, ml...) only in STOCK MODE -->
    <EditText
        android:id="@+id/etIngredientUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit (g, pcs...)"
        android:background="@drawable/rounded_input"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="18dp"
        android:visibility="gone" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pale_background"
            android:text="Cancel"
            android:textColor="@color/pale_grey"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingVertical="10dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="Save"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingVertical="10dp" />
    </LinearLayout>

</LinearLayout>
