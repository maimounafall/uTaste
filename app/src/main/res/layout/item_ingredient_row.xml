<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/pale_background"
    android:elevation="3dp"
    android:clipToOutline="true">

    <!-- Ingredient info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/tvNumberOfSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flour"
            android:textColor="@color/burgundy"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>


    <!-- Modify Button -->
    <RelativeLayout
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="6dp">

        <Button
            android:id="@+id/btnModifyIngredient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_button"
            android:contentDescription="Modify ingredient" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/modify_icon"
            android:tint="@color/burgundy" />
    </RelativeLayout>


    <!-- Delete Button -->
    <RelativeLayout
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="6dp">

        <Button
            android:id="@+id/btnDeleteIngredient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_button"
            android:contentDescription="Delete ingredient" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/delete_icon"
            android:tint="@color/burgundy" />
    </RelativeLayout>


    <!--BILAN Button -->
    <RelativeLayout
        android:layout_width="42dp"
        android:layout_height="42dp">

        <Button
            android:id="@+id/btnNutrition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_button"
            android:contentDescription="Nutrition bilan" />

        <ImageView
            android:id="@+id/imgNutrition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/nutrition_icon"
            android:tint="@color/burgundy"/>

    </RelativeLayout>

</LinearLayout>
