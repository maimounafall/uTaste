<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft white background -->
    <solid android:color="@color/off_white" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Subtle shadow-like border -->
    <stroke
        android:width="1dp"
        android:color="@color/pale_grey" />

    <!-- Optional padding inside -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>
