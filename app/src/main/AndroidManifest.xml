<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- CAMERA & INTERNET -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".backend.UTasteApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTaste"
        tools:targetApi="31">

        <!-- ML KIT Scanner -->
        <activity
            android:name=".BarcodeScannerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".StockActivity" android:exported="false" />
        <activity android:name=".ManageUsersActivity" android:exported="false" />

        <activity
            android:name=".PortraitCaptureActivity"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/Theme.UTaste">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".AdminProfileActivity" android:exported="false" />
        <activity android:name=".ChefActivity" android:exported="false" />
        <activity android:name=".WaiterActivity" android:exported="false" />
        <activity android:name=".AddWaiterActivity" android:exported="false" />

        <activity android:name=".AddRecipeActivity" android:exported="false" />
        <activity android:name=".SelectRecipeImageActivity" android:exported="false" />
        <activity android:name=".ManageRecipesActivity" android:exported="false" />
        <activity android:name=".ViewRecipesActivity" android:exported="false" />
        <activity android:name=".RecordSaleActivity" android:exported="false" />
        <activity android:name=".SalesReportActivity" android:exported="false" />

    </application>

</manifest>
